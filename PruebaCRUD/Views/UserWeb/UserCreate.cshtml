@model PruebaCRUD.Models.User

@{
    ViewData["Title"] = "Nuevo Usuario";
}

<div class="text-center d-flex flex-column">
    <h1 class="display-5 mb-5">Nuevo Usuario</h1>
    <div class="container">
        <div class="row align-content-start justify-content-start gap-3">
            <div class="card w-100 p-3">
                <div class="card-body">
                    @using (Html.BeginForm("CreateUser", "UserApi", routeValues: new { }, method: FormMethod.Post, htmlAttributes: new { @id = "apiForm", @class = "form-group d-flex flex-column align-items-start" }, antiforgery: false))
                {
                        <div class="form-group w-100 d-flex flex-column align-items-start">
                        <label for="Dni">Dni:</label>
                        @Html.TextBoxFor(m => m.Dni, new { @id = "Dni", @name = "Dni", @class = "form-control" })
                    </div>
    
                    
                        <div class="form-group w-100 d-flex flex-column align-items-start">
                        <label for="Nombre">Nombre(s):</label>
                        @Html.TextBoxFor(m => m.Nombre, new { @id = "Nombre", @name = "Nombre", @class = "form-control" })
                    </div>

                        <div class="form-group w-100 d-flex flex-column align-items-start">
                        <label for="Apellido">Apellido(s):</label>
                        @Html.TextBoxFor(m => m.Apellido, new { @id = "Apellido", @name = "Apellido", @class = "form-control" })
                    </div>

                    <button class="btn btn-primary" type="submit">Registrar</button>
                }
                </div>

            </div>
        </div>
    </div>

</div>
